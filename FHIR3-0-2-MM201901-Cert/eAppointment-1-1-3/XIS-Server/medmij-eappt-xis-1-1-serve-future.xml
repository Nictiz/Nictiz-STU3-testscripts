<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
    <id value="medmij-eappt-xis-1-1-serve-future"/>
    <url value="http://nictiz.nl/fhir/TestScript/medmij-eappt-xis-1-1-serve-future"/>
    <version value="stu3-1.1.3"/>
    <name value="Nictiz MedMij eAppointment - XIS Server - Scenario 1.1 - Serve Person 1 Future"/>
    <status value="active"/>
    <date value="2021-07-27"/>
    <publisher value="Nictiz"/>
    <contact>
        <name value="Nictiz"/>
        <telecom>
            <system value="email"/>
            <value value="kwalificatie@nictiz.nl"/>
            <use value="work"/>
        </telecom>
    </contact>
    <description value="MedMij eAppointment for FHIR STU3 - Scenario 1.1: Future Appointments - All appointments of person 1 in period from T-150 and everything in the future (3 appointments to 3 different specialisms). Search parameters used: patient (match person 1), date (greater than or equal to 1 January 2018)."/>
    <copyright value="Â© Nictiz 2018"/>
    <fixture id="patient-token-fixture">
        <resource>
            <reference value="../_reference/resources/eAfspraak-Patient-Token-kwalificatie1.xml"/>
        </resource>
    </fixture>
    <fixture id="appointment1-fixture">
        <resource>
            <reference value="../_reference/resources/eAfspraak-Appointment-kwalificatie1.xml"/>
        </resource>
    </fixture>
    <fixture id="appointment2-fixture">
        <resource>
            <reference value="../_reference/resources/eAfspraak-Appointment-kwalificatie2.xml"/>
        </resource>
    </fixture>
    <fixture id="appointment3-fixture">
        <resource>
            <reference value="../_reference/resources/eAfspraak-Appointment-kwalificatie3.xml"/>
        </resource>
    </fixture>
    <profile id="Bundle-profile">
        <reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
    </profile>
    <variable>
        <name value="patient-token-id"/>
        <path value="id"/>
        <sourceId value="patient-token-fixture"/>
    </variable>
    <variable>
        <name value="appointment1-id"/>
        <path value="Appointment/id"/>
        <sourceId value="appointment1-fixture"/>
    </variable>
    <variable>
        <name value="appointment2-id"/>
        <path value="Appointment/id"/>
        <sourceId value="appointment2-fixture"/>
    </variable>
    <variable>
        <name value="appointment3-id"/>
        <path value="Appointment/id"/>
        <sourceId value="appointment3-fixture"/>
    </variable>
    <variable>
        <name value="T"/>
        <defaultValue value="${CURRENTDATE}"/>
        <description value="Date that data and queries are expected to be relative to."/>
    </variable>
    <variable>
        <name value="token-XXX-Verweij"/>
        <defaultValue value="Bearer 2588b52d-c5ef-4cfa-84d4-acf8419a72e9"/>
        <!--<defaultValue value="${patient1-token-id}"/>-->
        <description value="OAuth Token for patient XXX_Verweij"/>
    </variable>
    <!-- No Setup -->
    <variable>
        <name value="MedMij-Request-ID"/>
        <defaultValue value="${UUID}"/>
        <description value="MedMij-Request-ID, by default a UUID. Does not have to be edited, see MM-2254 for more information"/>
    </variable>
    <test id="01-ServeAppointments">
        <name value="01-ServeAppointments"/>
        <description value="Test XIS Server query search operation for known Appointments of person 1 and in period from T-150 and everything in the future. The expected response code is 200(OK) and content is a searchset Bundle resource where multiple entries of found Appointment resources are returned."/>
        <action>
            <operation>
                <type>
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                    <code value="search"/>
                </type>
                <resource value="Appointment"/>
                <description value="XIS Server query search operation for known Appointments."/>
                <accept value="xml"/>
                <contentType value="none"/>
                <params value="?date=ge${DATE, T, D,-150}"/>
                <requestHeader>
                    <!-- 0..* Each operation can have one or more header elements -->
                    <field value="Authorization"/>
                    <!-- 1..1 HTTP header field name: OAuth access token -->
                    <value value="${token-XXX-Verweij}"/>
                    <!-- 1..1 HTTP headerfield value: UUID4 -->
                </requestHeader>
                <requestHeader>
                    <field value="MedMij-Request-ID"/>
                    <value value="${MedMij-Request-ID}"/>
                </requestHeader>
            </operation>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned HTTP status is 200(OK)."/>
                <direction value="response"/>
                <responseCode value="200"/>
            </assert>
        </action>
        <!--
		<action>
			<assert>
				<description value="Confirm that the returned HTTP Header Content-Type contains the FHIR mime-type 'application/fhir+xml'."/>
				<direction value="response"/>
				<contentType value="xml"/>
			</assert>
		</action>
		-->
        <action>
            <assert>
                <description value="Confirm that the returned resource type is Bundle."/>
                <direction value="response"/>
                <resource value="Bundle"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle conforms to the base FHIR specification."/>
                <direction value="response"/>
                <validateProfileId value="Bundle-profile"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle type is searchset."/>
                <direction value="response"/>
                <operator value="equals"/>
                <path value="Bundle/type"/>
                <value value="searchset"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned searchset Bundle contains 3 entries."/>
                <direction value="response"/>
                <operator value="equals"/>
                <path value="Bundle/total"/>
                <value value="3"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle total value matches or is greater than the number of entries in the Bundle."/>
                <direction value="response"/>
                <expression value="Bundle.total.toInteger() &gt;= Bundle.entry.where(search.empty() or search.mode = 'match').count()"/>
            </assert>
        </action>
    </test>
</TestScript>
