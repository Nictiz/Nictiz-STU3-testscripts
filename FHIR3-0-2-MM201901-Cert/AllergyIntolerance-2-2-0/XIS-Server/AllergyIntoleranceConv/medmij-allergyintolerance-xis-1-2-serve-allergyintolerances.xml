<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
    <id value="medmij-aic-xis-1-2-serve-allergyintolerance-xml"/>
    <url value="http://nictiz.nl/fhir/TestScript/medmij-aic-xis-1-2-retrieve-allergyintolerance-xml"/>
    <version value="stu3-2.2.0"/>
    <name value="Nictiz MedMij AllergyIntoleranceConversion - XIS Server - Scenario 1.2 - Serve AlleryIntolerance resources - XML"/>
    <status value="active"/>
    <date value="2021-11-30"/>
    <publisher value="Nictiz"/>
    <contact>
        <name value="Nictiz"/>
        <telecom>
            <system value="email"/>
            <value value="kwalificatie@nictiz.nl"/>
            <use value="work"/>
        </telecom>
    </contact>
    <description value="MedMij AllergyIntoleranceConversion for FHIR STU3 - Scenario 1.2: Query AllergyIntolerance - XML Format - Query all AllergyIntolerance resources of XXX-Smits. Response consists of the found AllergyIntolerance resources."/>
    <copyright value="Â© Nictiz 2019"/>
    <fixture id="patient-token-fixture">
        <resource>
            <reference value="../../_reference/resources-generic/allergyintolerance-nl-core-patient-XXX-Smits-token.xml"/>
        </resource>
    </fixture>
    <profile id="Bundle-profile">
        <reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
    </profile>
    <variable>
        <name value="patient-token-id"/>
        <expression value="Patient.id"/>
        <sourceId value="patient-token-fixture"/>
    </variable>
    <variable>
        <name value="token-XXX-Smits"/>
        <defaultValue value="Bearer 473b7ca0-f0f7-11e9-aaef-0800200c9a66"/>
        <!--<defaultValue value="${patient-token-id}"/>-->
        <description value="OAuth Token for patient XXX_Smits"/>
    </variable>
    <!-- No Setup -->
    <test id="01-ServeAllergyIntolerances">
        <name value="01-ServeAllergyIntolerances"/>
        <description value="Test XIS Server query search operation for known AllergyIntolerance of XXX-Smits. The expected response code is 200(OK) and content is a searchset Bundle resource where entries of found AllergyIntolerance resources are returned in XML format."/>
        <action>
            <operation>
                <type>
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                    <code value="search"/>
                </type>
                <resource value="AllergyIntolerance"/>
                <description value="XIS Server query search operation for known AllergyIntolerances."/>
                <accept value="xml"/>
                <contentType value="none"/>
                <requestHeader>
                    <field value="Authorization"/>
                    <value value="${token-XXX-Smits}"/>
                </requestHeader>
                <requestHeader>
                    <field value="MedMij-Request-ID"/>
                    <value value="${UUID}"/>
                </requestHeader>
            </operation>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned HTTP status is 200(OK)."/>
                <direction value="response"/>
                <responseCode value="200"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned resource type is Bundle."/>
                <direction value="response"/>
                <resource value="Bundle"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle type is searchset."/>
                <direction value="response"/>
                <operator value="equals"/>
                <path value="Bundle/type"/>
                <value value="searchset"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned searchset Bundle is empty, or contains an OperationOutcome as first resource or contains 4 AllergyIntolerance entries."/>
                <direction value="response"/>
                <expression value="Bundle.where(entry.empty() or entry[0].resource.is(OperationOutcome) or entry.where(resource.is(AllergyIntolerance)).count() = 4).exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle total value matches or is greater than the number of entries in the Bundle."/>
                <direction value="response"/>
                <expression value="Bundle.total.toInteger() &gt;= Bundle.entry.where(search.empty() or search.mode = 'match').count()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle conforms to the base FHIR specification."/>
                <direction value="response"/>
                <validateProfileId value="Bundle-profile"/>
            </assert>
        </action>
    </test>
</TestScript>
