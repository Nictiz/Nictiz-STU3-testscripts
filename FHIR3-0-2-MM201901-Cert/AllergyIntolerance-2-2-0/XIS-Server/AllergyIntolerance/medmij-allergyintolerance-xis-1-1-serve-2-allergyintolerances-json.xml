<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
    <id value="medmij-allergyintolerance-xis-1-1-serve-2-allergyintolerance-xml"/>
    <url value="http://nictiz.nl/fhir/TestScript/medmij-allergyintolerance-xis-1-1-retrieve-allergyintolerance-json"/>
    <version value="stu3-2.2.0"/>
    <name value="Nictiz MedMij AllergyIntolerance - XIS Server - Scenario 1.1 - Serve 2 AlleryIntolerance resources - JSON"/>
    <status value="active"/>
    <date value="2021-07-27"/>
    <publisher value="Nictiz"/>
    <contact>
        <name value="Nictiz"/>
        <telecom>
            <system value="email"/>
            <value value="kwalificatie@nictiz.nl"/>
            <use value="work"/>
        </telecom>
    </contact>
    <description value="MedMij AllergyIntolerance for FHIR STU3 - Scenario 1.1: Query AllergyIntolerance - JSON Format - Query all AllergyIntolerance resources of XXX-Yong. Response consists of 2 AllergyIntolerance resources."/>
    <copyright value="Â© Nictiz 2018"/>
    <fixture id="patient-token-fixture">
        <resource>
            <reference value="../../_reference/resources-generic/allergyintolerance-nl-core-patient-XXX-Yong-token.xml"/>
        </resource>
    </fixture>
    <profile id="Bundle-profile">
        <reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
    </profile>
    <variable>
        <name value="patient-token-id"/>
        <expression value="Patient.id"/>
        <sourceId value="patient-token-fixture"/>
    </variable>
    <variable>
        <name value="token-XXX-Yong"/>
        <defaultValue value="Bearer 5d0d5475-9609-4e91-bbca-c466ed704952"/>
        <!--<defaultValue value="${patient1-token-id}"/>-->
        <description value="OAuth Token for patient XXX_Yong"/>
    </variable>
    <!-- No Setup -->
    <test id="01-ServeAllergyIntolerances">
        <name value="01-ServeAllergyIntolerances"/>
        <description value="Test XIS Server query search operation for known AllergyIntolerance of XXX-Yong. The expected response code is 200(OK) and content is a searchset Bundle resource where 2 entries of found AllergyIntolerance resources are returned in JSON format."/>
        <action>
            <operation>
                <type>
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                    <code value="search"/>
                </type>
                <resource value="AllergyIntolerance"/>
                <description value="XIS Server query search operation for known AllergyIntolerances."/>
                <accept value="json"/>
                <contentType value="none"/>
                <requestHeader>
                    <field value="Authorization"/>
                    <value value="${token-XXX-Yong}"/>
                </requestHeader>
                <requestHeader>
                    <field value="MedMij-Request-ID"/>
                    <value value="${UUID}"/>
                </requestHeader>
            </operation>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned HTTP status is 200(OK)."/>
                <direction value="response"/>
                <responseCode value="200"/>
            </assert>
        </action>
        <!--<action>
      <assert>
        <description value="Confirm that the returned HTTP Header Content-Type contains the FHIR mime-type 'application/fhir+xml'."/>
        <direction value="response"/>
        <contentType value="xml"/>
      </assert>
    </action>-->
        <action>
            <assert>
                <description value="Confirm that the returned resource type is Bundle."/>
                <direction value="response"/>
                <resource value="Bundle"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle type is searchset."/>
                <direction value="response"/>
                <operator value="equals"/>
                <path value="Bundle/type"/>
                <value value="searchset"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned searchset Bundle is empty, or contains an OperationOutcome as first resource or contains 2 AllergyIntolerance entries."/>
                <direction value="response"/>
                <expression value="Bundle.where(entry.empty() or entry[0].resource.is(OperationOutcome) or entry.where(resource.is(AllergyIntolerance)).count() = 2).exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle total value matches or is greater than the number of entries in the Bundle."/>
                <direction value="response"/>
                <expression value="Bundle.total.toInteger() &gt;= Bundle.entry.where(search.empty() or search.mode = 'match').count()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle conforms to the base FHIR specification."/>
                <direction value="response"/>
                <validateProfileId value="Bundle-profile"/>
            </assert>
        </action>
    </test>
</TestScript>
