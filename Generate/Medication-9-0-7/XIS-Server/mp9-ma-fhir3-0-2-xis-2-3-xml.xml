<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
   <id value="mp9-ma-fhir3-0-2-xis-2-3-xml"/>
   <name value="Medication Process 9.0.7 - MedicationAgreement (NL: MedicatieAfspraak) - XIS Server - Scenario 2.3 - XML Format"/>
   <description value="Scenario 2.3 - Reden van voorschrijven"/>
   <nts:patientTokenFixture href="mp9-nl-core-patient-XXX-VONKER-token.xml" />
   <profile id="bundle-profile">
      <reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
   </profile>
   <test id="mg-mgr-mg-MA-Scenarioset2-2-3">
      <name value="Scenario 2.3"/>
      <description value="Scenario 2.3 - Reden van voorschrijven"/>
      <nts:include value="xis-ma-vv-operation-search">
         <nts:variable name="description"
                       value="Test XIS server to serve MedicationAgreement (NL: MedicatieAfspraak) - Reden van voorschrijven"/>
         <nts:variable name="accept" value="xml"/>
         <nts:variable name="params"
                       value="?category=http://snomed.info/sct|16076005&amp;medication.code=urn:oid:2.16.840.1.113883.2.4.4.10|6009&amp;_include=MedicationRequest:medication"/>
      </nts:include>
      <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
      <nts:include value="assert-responseBundleContent" scope="common"/>
      <nts:include value="assert-returnCount" scope="project">
         <nts:variable name="description"
                       value="Confirm that the returned searchset Bundle contains 3 MedicationAgreements."/>
         <nts:variable name="expression"
                       value="Bundle.entry.where(resource.is(MedicationRequest)).count() = 3"/>
      </nts:include>
   </test>
</TestScript>
