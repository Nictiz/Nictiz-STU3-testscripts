<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
   <id value="mp9-ma-fhir3-0-2-xis-4-1-xml"/>
   <name value="Medication Process 9.0.7 - MedicationAgreement (NL: MedicatieAfspraak) - XIS Server - Scenario 4.1 - XML Format"/>
   <description value="Scenario 4.1 - Medicatieafspraak met lengte en gewicht"/>
   <nts:patientTokenFixture href="mp9-nl-core-patient-XXX-MOLENAARS-token.xml" type="xis"/>
   <profile id="bundle-profile">
      <reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
   </profile>
   <test id="mg-mgr-mg-MA-Scenarioset4-4-1">
      <name value="Scenario 4.1"/>
      <description value="Scenario 4.1 - Medicatieafspraak met lengte en gewicht"/>
      <nts:include value="xis-ma-vv-operation-search">
         <nts:variable name="description"
                       value="Test XIS server to serve MedicationAgreement (NL: MedicatieAfspraak) - Medicatieafspraak met lengte en gewicht"/>
         <nts:variable name="accept" value="xml"/>
         <nts:variable name="params"
                       value="?category=http://snomed.info/sct|16076005&amp;_include=MedicationRequest:medication"/>
      </nts:include>
      <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
      <nts:include value="assert-responseBundleContent" scope="common"/>
      <nts:include value="assert-returnCount" scope="project">
         <nts:variable name="description"
                       value="Confirm that the returned searchset Bundle contains 1 MedicationAgreement."/>
         <nts:variable name="expression"
                       value="Bundle.entry.where(resource.is(MedicationRequest)).count() = 1"/>
      </nts:include>
   </test>
</TestScript>

