<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="medmij-medication-dispense612conversion-xis-3-1e"/>
    <version value="stu3-9.0.7"/>
    <name value="Medication Process 9.0.7  - Dispense 612 Conversion - XIS Server - Scenario 3.1e - Filter op gebruiksperiode, alles vanaf T-21."/>
    <description value="Scenario 3.1e - Filter op gebruiksperiode, alles vanaf T-21. Patient Peter P. Veenoord."/>    
    <nts:patientTokenFixture href="mp9-nl-core-patient-VEENOORD-token.xml" />
    <nts:includeDateT value="yes"/>
    
    <test id="Scenario-3-1e">
        <name value="Scenario 3.1e"/>
        <description value="Filter op gebruiksperiode, alles vanaf T-21."/>
        <nts:include value="operation-search">
            <nts:with-parameter name="description" value="Test XIS Server search operation - Filter op gebruiksperiode, alles vanaf T-21."/>
            <nts:with-parameter name="resource" value="MedicationDispense"/>
            <nts:with-parameter name="accept" value="xml"/>
            <nts:with-parameter name="params" value="?category=http://snomed.info/sct|373784005,http://snomed.info/sct|422037009&amp;_include=MedicationDispense:medication&amp;_include=MedicationDispense:patient&amp;_include=MedicationDispense:performer&amp;periodofuse=ge${DATE, T, D,-21}"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-responseBundleContent" scope="common"/>
        <nts:include value="assert-returnCount-warningOnly" scope="project">
            <nts:with-parameter name="description" value="Confirm that number of administration agreement resources match the expected number."/>
            <nts:with-parameter name="expression" value="Bundle.entry.resource.where(is(MedicationDispense) and category.coding.code = '422037009').count() = 4 "/>
        </nts:include>  
        <nts:include value="assert-returnCount-warningOnly" scope="project">
            <nts:with-parameter name="description" value="Confirm that number of dispense resources match the expected number."/>
            <nts:with-parameter name="expression" value="Bundle.entry.resource.where(is(MedicationDispense) and category.coding.code = '373784005').count() = 4 "/>
        </nts:include>  
        <nts:include value="assert-returnCount-warningOnly" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains at least 14 entries."/>
            <nts:with-parameter name="expression" value="Bundle.entry.count() &gt;= 14"/>
        </nts:include>  
    </test>    
</TestScript>
