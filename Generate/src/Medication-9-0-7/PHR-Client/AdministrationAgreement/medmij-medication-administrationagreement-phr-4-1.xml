<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="medmij-medication-administrationagreement-phr-4-1"/>
    <version value="stu3-9.0.7"/>
    <name value="Medication Process 9.0.7  - AdmininstrationAgreement - PHR Client - Scenario 4.1"/>
    <description value="Scenario 4.1 - Toedieningsafspraken met diverse doseerinstructies."/>
    <nts:patientTokenFixture href="mp9-nl-core-patient-XXX-STRENGERSZ-token.xml" />

    <test id="Scenario-4-1">
        <name value="Scenario 4.1"/>
        <description value="Toedieningsafspraken met diverse doseerinstructies."/>
        <nts:include value="operation-search">
            <nts:with-parameter name="description" value="Query MedicationDispense resource(s) for AdministrationAgreement"/>
            <nts:with-parameter name="resource" value="MedicationDispense"/>
            <nts:with-parameter name="params" value="?category=http://snomed.info/sct|422037009&amp;_include=MedicationDispense:medication"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-responseBundleContent" scope="common"/>
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 16 MedicationDispense resource(s)."/>
            <nts:with-parameter name="expression" value="Bundle.entry.where(resource.is(MedicationDispense)).count() = 16"/>
        </nts:include>   
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 30 entry resources."/>
            <nts:with-parameter name="expression" value="Bundle.entry.count() = 30"/>
        </nts:include>  
    </test>
    
</TestScript>
