    <test id="Scenario-1-3-1">
        <name value="Scenario 1.3 test 1"/>
        <description value="Toedieningsafspraken met een filter op meerdere product codes."/>
        <nts:include value="operation-search">
            <nts:with-parameter name="description" value="Query MedicationDispense resource(s) for AdministrationAgreement"/>
            <nts:with-parameter name="resource" value="MedicationDispense"/>
            <nts:with-parameter name="params" value="?category=http://snomed.info/sct|422037009&amp;medication.code=urn:oid:2.16.840.1.113883.2.4.4.7|229709&amp;_include=MedicationDispense:medication"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-responseBundleContent" scope="common"/>
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 1 MedicationDispense resource(s)."/>
            <nts:with-parameter name="expression" value="Bundle.entry.where(resource.is(MedicationDispense)).count() = 1"/>
        </nts:include>  
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 2 entry (1 MedicationDispense and 1 Medication) resources."/>
            <nts:with-parameter name="expression" value="Bundle.entry.count() = 2"/>
        </nts:include>  
    </test>

