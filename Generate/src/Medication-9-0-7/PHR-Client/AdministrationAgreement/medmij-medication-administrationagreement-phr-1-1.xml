<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="medmij-medication-administrationagreement-phr-1-1"/>
    <version value="stu3-9.0.7"/>
    <name value="Medication Process 9.0.7  - AdmininstrationAgreement - PHR Client - Scenario 1.1"/>
    <description value="Scenario 1.1 - Alle toedieningsafspraken van de patiënt, zonder aanvullende filter criteria."/>
    <nts:patientTokenFixture href="mp9-nl-core-patient-XXX-DIRKSZ-token.xml" />

    <test id="Scenario-1-1">
        <name value="Scenario 1.1"/>
        <description value="Alle toedieningsafspraken van de patiënt, zonder aanvullende filter criteria."/>
        <nts:include value="operation-search">
            <nts:with-parameter name="description" value="Query MedicationDispense resource(s) for AdministrationAgreement"/>
            <nts:with-parameter name="resource" value="MedicationDispense"/>
            <nts:with-parameter name="params" value="?category=http://snomed.info/sct|422037009&amp;_include=MedicationDispense:medication"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-responseBundleContent" scope="common"/>
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 3 MedicationDispense resource(s)."/>
            <nts:with-parameter name="expression" value="Bundle.entry.where(resource.is(MedicationDispense)).count() = 3"/>
        </nts:include>  
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 6 entry (3 MedicationDispense and 3 Medication) resources."/>
            <nts:with-parameter name="expression" value="Bundle.entry.count() = 6"/>
        </nts:include>  
    </test>

</TestScript>
