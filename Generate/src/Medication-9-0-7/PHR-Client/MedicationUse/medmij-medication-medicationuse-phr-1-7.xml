<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="medmij-medication-medicationuse-phr-1-7"/>
    <version value="stu3-9.0.7"/>
    <name value="Medication Process 9.0.7  - MedicationUse - PHR Client - Scenario 1.7"/>
    <description value="Scenario 1.7 - Een patiënt zonder medicatiegebruik."/>
    <nts:patientTokenFixture href="mp9-nl-core-patient-XXX-RUYS-token.xml" />
    
    <test id="Scenario-1-7">
        <name value="Scenario 1.7"/>
        <description value="Een patiënt zonder medicatiegebruik."/>
        <nts:include value="operation-search">
            <nts:with-parameter name="description" value="Query MedicationStatement resource(s) for MedicationUse"/>
            <nts:with-parameter name="resource" value="MedicationStatement"/>
            <nts:with-parameter name="params" value="?category=urn:oid:2.16.840.1.113883.2.4.3.11.60.20.77.5.3|6&amp;_include=MedicationStatement:medication"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-responseBundleContent" scope="common"/>
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 0 MedicationStatement resources."/>
            <nts:with-parameter name="expression" value="Bundle.entry.where(resource.is(MedicationStatement)).count() = 0"/>
        </nts:include>  
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 0 entries."/>
            <nts:with-parameter name="expression" value="Bundle.entry.count() = 0"/>
        </nts:include>          
    </test>
</TestScript>