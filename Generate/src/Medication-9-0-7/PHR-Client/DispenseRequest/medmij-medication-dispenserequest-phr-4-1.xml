<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="medmij-medication-dispenserequest-phr-4-1"/>
    <version value="stu3-9.0.7"/>
    <name value="Medication Process 9.0.7  - DispenseRequest - PHR Client - Scenario 4.1"/>
    <description value="Scenario 4.1 - Specifieke inhoud."/>
    <nts:patientTokenFixture href="mp9-nl-core-patient-XXX-AMAYA-token.xml" />
    
    <test id="Scenario-4-1">
        <name value="Scenario 4.1"/>
        <description value="Specifieke inhoud."/>
        <nts:include value="operation-search">
            <nts:with-parameter name="description" value="Query MedicationRequest resource(s) for DispenseRequest"/>
            <nts:with-parameter name="resource" value="MedicationRequest"/>
            <nts:with-parameter name="params" value="?category=http://snomed.info/sct|52711000146108&amp;_include=MedicationRequest:medication"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-responseBundleContent" scope="common"/>
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 2 MedicationRequest resources."/>
            <nts:with-parameter name="expression" value="Bundle.entry.where(resource.is(MedicationRequest)).count() = 2"/>
        </nts:include>  
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 4 entries."/>
            <nts:with-parameter name="expression" value="Bundle.entry.count() = 4"/>
        </nts:include>  
    </test>
</TestScript>