<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="medmij-medication-dispense612conversion-fhir3-0-2-phr-2-3"/>
    <name value="Medication Process 9.0.7  - Dispense 612 Conversion - PHR Client - Scenario 2.3 - Diverse gegevens."/>
    <description value="Scenario 2.3 - Diverse gegevens. Patient Hanneke XXX_Bekker."/>
    <nts:patientTokenFixture href="mp9-nl-core-patient-XXX-BEKKER-token.xml" /> 
    
    <test id="Scenario-2-3">
        <name value="Scneario 2.3"/>
        <description value="Diverse gegevens."/>
        <nts:include value="operation-search">
            <nts:with-parameter name="description"
                value="Test PHR Client Retrieve Dispense - Diverse gegevens."/>
            <nts:with-parameter name="resource" value="MedicationDispense"/>
            <nts:with-parameter name="accept" value="xml"/>
            <nts:with-parameter name="params" value="?category=http://snomed.info/sct|373784005,http://snomed.info/sct|422037009&amp;_include=MedicationDispense:medication&amp;_include=MedicationDispense:patient&amp;_include=MedicationDispense:performer"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-responseBundleContent" scope="common"/>
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description"
                value="Confirm that the returned searchset Bundle contains 6 MedicationDispense resources."/>
            <nts:with-parameter name="expression"
                value="Bundle.entry.where(resource.is(MedicationDispense)).count() = 6"/>
        </nts:include>  
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description"
                value="Confirm that the returned searchset Bundle contains 10 entries (6 MedicationDispense, 2 Medication, 1 organization, 1 patient resources)."/>
            <nts:with-parameter name="expression"
                value="Bundle.entry.count() = 10"/>
        </nts:include>  
    </test>
</TestScript>