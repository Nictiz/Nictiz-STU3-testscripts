<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="medmij-medication-dispense612conversion-fhir3-0-2-phr-1-1"/>
    <name value="Medication Process 9.0.7  - Dispense 612 Conversion - PHR Client - Scenario 1.1 - Geen gebruiks- en verbruiksperiode"/>
    <description value="Scenario 1.1 - Geen gebruiks- en verbruiksperiode. Patient Richard R. van Henegouwen."/>
    <nts:patientTokenFixture href="mp9-nl-core-patient-HENEGOUWEN-token.xml" />

    
    <test id="Scenario-1-1">
        <name value="Scenario 1.1"/>
        <description value="Geen gebruiks- en verbruiksperiode."/>
        <nts:include value="operation-search">
            <nts:with-parameter name="description"
                value="Test PHR Client to retrieve all Dispense"/>
            <nts:with-parameter name="resource" value="MedicationDispense"/>
            <nts:with-parameter name="accept" value="xml"/>
            <nts:with-parameter name="params" value="?category=http://snomed.info/sct|373784005,http://snomed.info/sct|422037009&amp;_include=MedicationDispense:medication&amp;_include=MedicationDispense:patient&amp;_include=MedicationDispense:performer"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-responseBundleContent" scope="common"/>
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description"
                value="Confirm that the returned searchset Bundle contains 2 MedicationDispense resources."/>
            <nts:with-parameter name="expression"
                value="Bundle.entry.where(resource.is(MedicationDispense)).count() = 2"/>
        </nts:include>  
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description"
                value="Confirm that the returned searchset Bundle contains 5 entries (2 MedicationDispense and 1 Medication, Patient and Organization resource)."/>
            <nts:with-parameter name="expression"
                value="Bundle.entry.count() = 5"/>
        </nts:include>  
    </test>
</TestScript>
