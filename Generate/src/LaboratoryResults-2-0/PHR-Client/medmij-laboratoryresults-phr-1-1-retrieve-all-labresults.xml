<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="lab-fhir3-0-2-phr-1-1"/>
    <version value="stu3-2.0"/>
    <name value="LaboratoryResults - PHR client - Scenario 1.1"/>
    <description value="Scenario 1.1 - Retrieve All LaboratoryResults"/>
    <nts:patientTokenFixture href="lab-nl-core-patient-XXX-Aantrekker-token.xml"/>
    <test id="lab-Scenarioset1-1">
        <name value="Scenario 1.1"/>
        <description value="Scenario 1.1 - Query All LaboratoryResults of person 1."/>
        <nts:include value="operation-search-observation">
            <nts:with-parameter name="description"
                value="Test PHR client to retrieve LaboratoryResults - All known LaboratoryResults Observations from person 1."/>
            <nts:with-parameter name="accept" value="xml"/>
            <nts:with-parameter name="params"
                value="?category=http://snomed.info/sct|49581000146104"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description"
                value="Confirm that the returned searchset Bundle contains 3 Observation resources."/>
            <nts:with-parameter name="expression"
                value="Bundle.entry.where(resource.is(Observation)).count() = 3"/>
        </nts:include>
    </test>
</TestScript>
