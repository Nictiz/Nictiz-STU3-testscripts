<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
	<id value="phr-1-1-retrieve-future"/>
	<version value="stu3-2.0"/>
	<name value="eAppointment - PHR Client - Scenario 1.1 - Retrieve Appointment resources of XXX-Verweij"/>
	<description value="Scenario 1.1 - Retrieve future Appointment resources of XXX-Verweij"/>
	<nts:patientTokenFixture href="eAfspraak-nl-core-patient-XXX-Verweij-token.xml"/>
	<nts:includeDateT value="yes"/>
	
	<test id="01-retrieve-appointment">
		<name value="Scenario 1.1"/>
		<description value="Query Appointment resources of XXX-Verweij in a period from T-150 and everything in the future."/>
		<nts:include value="operation-search-params-phr">
			<nts:with-parameter name="resource" value="Appointment"/>
			<nts:with-parameter name="params" value="?date=ge${DATE, T, D,-150}"/>
			<nts:with-parameter name="accept" value="xml"/>
		</nts:include>
		<nts:include value="assert-authorizationHeader" scope="common"/>
		<nts:include value="assert-request" scope="common"/>
		<nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
		<nts:include value="assert-returnCount" scope="project">
			<nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 3 Appointment resources."/>
			<nts:with-parameter name="expression" value="Bundle.entry.where(resource.is(Appointment)).count() = 3"/>
		</nts:include>
	</test>
</TestScript>