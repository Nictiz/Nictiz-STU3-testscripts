<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="xis-1-5-serve-period-observation"/>
    <version value="stu3-2.0"/>
    <name value="SelfMeasurements - XIS Server - Scenario 1.5 - Serve multiple type of Observation resources in period T-30 - T-0"/>
    <description value="Scenario 1.5 - Serve multiple type of Observation resources in period T-30 - T-0"/>
    <nts:patientTokenFixture href="selfmeasurements-nl-core-patient-XXX-Bourgonjee-token.xml"/>
    <nts:includeDateT value="yes"/>
    
    <test id="scenario1-5-serve-period-observation">
        <name value="Scenario 1.5"/>
        <description value="Serve multiple type of Observation resources in period T-30 - T-0"/>
        <nts:include value="operation-search-params-xis">
            <nts:with-parameter name="resource" value="Observation"/>
            <nts:with-parameter name="params" value="?code=http://loinc.org|85354-9,http://loinc.org|29463-7,http://loinc.org|14760-3,http://loinc.org|14743-9,http://loinc.org|14770-2&amp;date=ge${DATE, T, D,-30}&amp;date=le${DATE, T, D,-0}"/>
            <nts:with-parameter name="accept" value="xml"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 7 Observation resources."/>
            <nts:with-parameter name="expression" value="Bundle.entry.where(resource.is(Observation)).count() = 7"/>
        </nts:include>
    </test>
</TestScript>
