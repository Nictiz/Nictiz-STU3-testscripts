<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="xis-1-4-serve-period-bloodpressure"/>
    <version value="stu3-2.0"/>
    <name value="SelfMeasurements - XIS Server - Scenario 1.4 - Serve BloodPressure Observation resources"/>
    <description value="Scenario 1.4 - Serve BloodPressure Observation resources in a period"/>
    <nts:patientTokenFixture href="selfmeasurements-nl-core-patient-XXX-Bourgonjee-token.xml"/>
    <nts:includeDateT value="yes"/>
    
    <test id="scenario1-4-serve-period-bloodpressure">
        <name value="Scenario 1.4"/>
        <description value="Serve BloodPressure Observation resources in a period"/>
        <nts:include value="operation-search-params-xis">
            <nts:with-parameter name="resource" value="Observation"/>
            <nts:with-parameter name="params" value="?code=http://loinc.org|85354-9&amp;date=ge${DATE, T, D,-100}&amp;date=le${DATE, T, D,-50}"/>
            <nts:with-parameter name="accept" value="xml"/>
        </nts:include>
        <nts:include value="assert-authorizationHeader" scope="common"/>
        <nts:include value="assert-request" scope="common"/>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-returnCount" scope="project">
            <nts:with-parameter name="description" value="Confirm that the returned searchset Bundle contains 0 Observation resources."/>
            <nts:with-parameter name="expression" value="Bundle.entry.where(resource.is(Observation)).count() = 0"/>
        </nts:include>
    </test>
</TestScript>