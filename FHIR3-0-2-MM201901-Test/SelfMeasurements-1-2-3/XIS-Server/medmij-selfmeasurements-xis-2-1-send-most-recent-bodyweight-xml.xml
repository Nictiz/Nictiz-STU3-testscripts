<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://hl7.org/fhir http://hl7.org/fhir/STU3/fhir-all.xsd" xmlns="http://hl7.org/fhir">
    <id value="xis-2-1-send-most-recent-bodyweight-xml"/>
    <url value="http://nictiz.nl/fhir/TestScript/medmij-selfmeasurements-xis-2-1-send-most-recent-bodyweight-xml"/>
    <version value="stu3-1.2.3"/>
    <name value="MedMij Self Measurements - XIS Server - Scenario 2.1 - Send Most Recent BodyWeight (Observation) - XML"/>
    <status value="active"/>
    <date value="2021-07-27"/>
    <publisher value="Nictiz"/>
    <contact>
        <name value="Nictiz"/>
        <telecom>
            <system value="email"/>
            <value value="kwalificatie@nictiz.nl"/>
            <use value="work"/>
        </telecom>
    </contact>
    <description value="MedMij Self Measurements for FHIR STU3 - Scenario 2.1: - Send Most Recent BodyWeight Observation - XML Format - of person 2. Response is expected to be HTTP 201 Created."/>
    <copyright value="Â© Nictiz 2019"/>
    <origin>
        <index value="1"/>
        <profile>
            <system value="http://hl7.org/fhir/testscript-profile-origin-types"/>
            <code value="FHIR-Client"/>
        </profile>
    </origin>
    <destination>
        <index value="1"/>
        <profile>
            <system value="http://hl7.org/fhir/testscript-profile-destination-types"/>
            <code value="FHIR-Server"/>
        </profile>
    </destination>
    <fixture id="patient2-token-fixture">
        <resource>
            <reference value="../_reference/medmij-selfmeasurements-Patient-Token-kwalificatie2.xml"/>
        </resource>
    </fixture>
    <fixture id="scenario-2-1-bundle-fixture">
        <resource>
            <reference value="../_reference/resources-serve-receive/medmij-selfmeasurements-serve-receive-scenario-2-1-bundle.xml"/>
        </resource>
    </fixture>
    <profile id="BodyWeight-profile">
        <reference value="http://nictiz.nl/fhir/StructureDefinition/zib-BodyWeight"/>
    </profile>
    <profile id="Bundle-profile">
        <reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
    </profile>
    <variable>
        <name value="patient2-token-id"/>
        <expression value="Patient.id"/>
        <sourceId value="patient2-token-fixture"/>
    </variable>
    <variable>
        <name value="patient-profile"/>
        <expression value="Bundle.entry.resource.ofType(Patient).meta.profile"/>
        <sourceId value="scenario-2-1-bundle-fixture"/>
    </variable>
    <variable>
        <name value="bodyweight-profile"/>
        <expression value="Bundle.entry.resource.ofType(Observation).meta.profile"/>
        <sourceId value="scenario-2-1-bundle-fixture"/>
    </variable>
    <variable>
        <name value="T"/>
        <defaultValue value="${CURRENTDATE}"/>
        <description value="Date that data and queries are expected to be relative to."/>
    </variable>
    <variable>
        <name value="token-XXX-Bergzoon"/>
        <defaultValue value="Bearer 06bbe01d-b3cb-4028-8b1c-f731d0241b57"/>
        <description value="OAuth Token for patient XXX_Bergzoon"/>
    </variable>
    <test id="Scenario2.1-SendMostRecentBodyWeight">
        <name value="Scenario2.1-SendMostRecentBodyWeight"/>
        <description value="Test XIS Client request to create/update the most recent BodyWeight Observation for known person 2. The expected response code is 201(Created)."/>
        <action>
            <operation>
                <type>
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                    <code value="batch"/>
                </type>
                <description value="XIS Server create or update operation for a Bundle of Observations of type BodyWeight."/>
                <accept value="xml"/>
                <contentType value="xml"/>
                <destination value="1"/>
                <origin value="1"/>
                <requestHeader>
                    <!-- 0..* Each operation can have one or more header elements -->
                    <field value="Authorization"/>
                    <!-- 1..1 HTTP header field name: OAuth access token -->
                    <value value="${token-XXX-Bergzoon}"/>
                    <!-- 1..1 HTTP headerfield value: UUID4 -->
                </requestHeader>
                <requestHeader>
                    <field value="MedMij-Request-ID"/>
                    <value value="${UUID}"/>
                </requestHeader>
                <sourceId value="scenario-2-1-bundle-fixture"/>
            </operation>
        </action>
        <!-- 2018-07-02 Deactivated. Would like to activate checking the request, but there a bug in the validator that leads to the following incorrect error:
        Validation of request body failed against profile 'http://hl7.org/fhir/StructureDefinition/Bundle'. Message from FHIR Validation
        Engine (FHIR specification's Java utilities): [ERROR: If code is the same as a component code then the value element associated with
        the code SHALL NOT be present [value.empty() or code!=component.code]. Location: Bundle.entry[3].resource (line 102, col19).].
            2018-09-14 Activated after code update on Touchstone
        -->
        <action>
            <assert>
                <description value="Confirm that the returned HTTP status is 200(OK) or 201(Created)."/>
                <direction value="response"/>
                <operator value="in"/>
                <responseCode value="200,201"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that query parameter 'patient=' was not present to avoid BSNs in the URL."/>
                <direction value="request"/>
                <operator value="notContains"/>
                <requestURL value="patient="/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that query parameter 'subject=' was not present to avoid BSNs in the URL."/>
                <direction value="request"/>
                <operator value="notContains"/>
                <requestURL value="subject="/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that Bundle does not use Burgerservicenummer (BSN) anywhere."/>
                <direction value="response"/>
                <expression value="Bundle.descendants().select(identifier.where(system.toString() = 'http://fhir.nl/fhir/NamingSystem/bsn').where(value.empty())).count() = 0"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that request Bundle is of type 'batch'."/>
                <direction value="request"/>
                <expression value="Bundle.type = 'batch'"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that all resources contain a meta.profile tag."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.where(is(OperationOutcome).not()).where(meta.profile.empty()).empty()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Bundle contains 1 Patient resource"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Patient).count() = 1"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Bundle contains 1 Observation resource"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).count() = 1"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Patient resource has the correct meta.profile tag."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Patient).meta.profile"/>
                <value value="${patient-profile}"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has the correct meta.profile tag."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).meta.profile"/>
                <value value="${bodyweight-profile}"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Bodyweight in the code element"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).code.coding.where(code = '29463-7').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that request body conforms to the Bundle profile."/>
                <direction value="response"/>
                <validateProfileId value="Bundle-profile"/>
            </assert>
        </action>
    </test>
</TestScript>
