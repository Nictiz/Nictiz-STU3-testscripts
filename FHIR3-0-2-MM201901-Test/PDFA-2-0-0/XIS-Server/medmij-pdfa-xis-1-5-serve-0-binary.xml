<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
    <id value="medmij-pdfa-xis-1-5-serve-0-binary-xml"/>
    <url value="http://nictiz.nl/fhir/TestScript/medmij-pdfa-xis-1-5-serve-0-binary-xml"/>
    <version value="stu3-2.0.0"/>
    <name value="Nictiz MedMij PDFA - XIS Server - Scenario 1.5 - Serve 0 Binary - XML"/>
    <status value="active"/>
    <date value="2021-11-30"/>
    <publisher value="Nictiz"/>
    <contact>
        <name value="Nictiz"/>
        <telecom>
            <system value="email"/>
            <value value="kwalificatie@nictiz.nl"/>
            <use value="work"/>
        </telecom>
    </contact>
    <description value="MedMij PDFA for FHIR STU3 - Scenario 1.5: Read PDF/A Binary - XML Format - read a PDFA Binary resource of person 1 which has a unknonw id on the XIS server. Responses is a HTTP 404 or 410."/>
    <copyright value="Â© Nictiz 2018"/>
    <fixture id="patient-token-fixture">
        <resource>
            <reference value="../_reference/resources/medmij-pdfa-Patient-Token-kwalificatie1.xml"/>
        </resource>
    </fixture>
    <variable>
        <name value="patient-token-id"/>
        <expression value="Patient.id"/>
        <sourceId value="patient-token-fixture"/>
    </variable>
    <variable>
        <name value="T"/>
        <defaultValue value="${CURRENTDATE}"/>
        <description value="Date that data and queries are expected to be relative to."/>
    </variable>
    <variable>
        <name value="token-XXX-Baltus"/>
        <defaultValue value="Bearer f92b6141-55db-46d5-a3ae-874b69907d22"/>
        <!--<defaultValue value="${patient-token-id}"/>-->
        <description value="OAuth Token for patient XXX_Baltus"/>
    </variable>
    <!-- No Setup -->
    <test id="01-ServeBinary">
        <name value="01-ServeBinary"/>
        <description value="Test XIS Server read operation for a PDFA Binary resource of person 1 which has a unknonw id on the XIS server. Responses is a HTTP 404 or 410."/>
        <action>
            <operation>
                <type>
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                    <code value="read"/>
                </type>
                <resource value="Binary"/>
                <description value="XIS Server read operation for known Binary resource."/>
                <accept value="xml"/>
                <contentType value="none"/>
                <params value="/example-pdfa-binary3"/>
                <requestHeader>
                    <!-- 0..* Each operation can have one or more header elements -->
                    <field value="Authorization"/>
                    <!-- 1..1 HTTP header field name: OAuth access token -->
                    <value value="${token-XXX-Baltus}"/>
                    <!-- 1..1 HTTP headerfield value: UUID4 -->
                </requestHeader>
                <requestHeader>
                    <field value="MedMij-Request-ID"/>
                    <value value="${UUID}"/>
                </requestHeader>
            </operation>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned HTTP status is 404(not found) or 410(gone)."/>
                <direction value="response"/>
                <operator value="in"/>
                <responseCode value="404,410"/>
            </assert>
        </action>
    </test>
</TestScript>
