<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
    <id value="medmij-pdfa-xis-3-1-receive-1-document"/>
    <url value="http://nictiz.nl/fhir/TestScript/medmij-pdfa-xis-3-1-receive-1-document"/>
    <version value="stu3-2.0.0"/>
    <name value="Nictiz MedMij PDFA - XIS server - Scenario 3.1 - receive 1 PDFA document"/>
    <status value="active"/>
    <date value="2021-07-27"/>
    <publisher value="Nictiz"/>
    <contact>
        <name value="Nictiz"/>
        <telecom>
            <system value="email"/>
            <value value="kwalificatie@nictiz.nl"/>
            <use value="work"/>
        </telecom>
    </contact>
    <description value="MedMij PDFA for FHIR STU3 - Scenario 3.1: receive 1 PDFA document in a transaction"/>
    <copyright value="Â© Nictiz 2019"/>
    <origin>
        <index value="1"/>
        <profile>
            <system value="http://hl7.org/fhir/testscript-profile-origin-types"/>
            <code value="FHIR-Client"/>
        </profile>
    </origin>
    <destination>
        <index value="1"/>
        <profile>
            <system value="http://hl7.org/fhir/testscript-profile-destination-types"/>
            <code value="FHIR-Server"/>
        </profile>
    </destination>
    <fixture id="patient-fixture">
        <resource>
            <reference value="../_reference/resources/medmij-pdfa-Patient-kwalificatie3.xml"/>
        </resource>
    </fixture>
    <fixture id="patient-token-fixture">
        <resource>
            <reference value="../_reference/resources/medmij-pdfa-Patient-Token-kwalificatie3.xml"/>
        </resource>
    </fixture>
    <fixture id="scenario-3-1-bundle-fixture">
        <resource>
            <reference value="../_reference/resources/medmij-pdfa-Bundle-kwalificatie1.xml"/>
        </resource>
    </fixture>
    <profile id="Bundle-profile">
        <reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
    </profile>
    <variable>
        <name value="patient-id"/>
        <expression value="Patient.id"/>
        <sourceId value="patient-fixture"/>
    </variable>
    <variable>
        <name value="patient-token-id"/>
        <expression value="Patient.id"/>
        <sourceId value="patient-token-fixture"/>
    </variable>
    <variable>
        <name value="scenario-3-1-bundle"/>
        <expression value="Bundle.id"/>
        <sourceId value="scenario-3-1-bundle-fixture"/>
    </variable>
    <variable>
        <name value="patient-profile"/>
        <expression value="Bundle.entry.resource.ofType(Patient).meta.profile"/>
        <sourceId value="scenario-3-1-bundle-fixture"/>
    </variable>
    <variable>
        <name value="T"/>
        <defaultValue value="${CURRENTDATE}"/>
        <description value="Date that data and queries are expected to be relative to."/>
    </variable>
    <variable>
        <name value="token-XXX-Ellens"/>
        <defaultValue value="Bearer 84b0da5a-3816-49ba-9df4-88bc089dd401"/>
        <!--<defaultValue value="${patient-token-id}"/>-->
        <description value="OAuth Token for patient XXX_Ellens"/>
    </variable>
    <!-- No Setup -->
    <test id="Scenario3.1-Receive-1-Document">
        <name value="Scenario3.1-Receive-1-Document"/>
        <description value="Test XIS server to receive 1 PDFA document for known person 1. The expected response code is 201(Created)."/>
        <action>
            <operation>
                <type>
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                    <code value="transaction"/>
                </type>
                <description value="XIS Server create or update operation for a Bundle of type transaction composed of the following resources: Patient, DocumentManifest, DocumentReference and Binary."/>
                <accept value="xml"/>
                <contentType value="xml"/>
                <destination value="1"/>
                <origin value="1"/>
                <requestHeader>
                    <!-- 0..* Each operation can have one or more header elements -->
                    <field value="Authorization"/>
                    <!-- 1..1 HTTP header field name: OAuth access token -->
                    <value value="${token-XXX-Ellens}"/>
                    <!-- 1..1 HTTP headerfield value: UUID4 -->
                </requestHeader>
                <requestHeader>
                    <field value="MedMij-Request-ID"/>
                    <value value="${UUID}"/>
                </requestHeader>
                <sourceId value="scenario-3-1-bundle-fixture"/>
            </operation>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned HTTP status is 200(OK) or 201(Created)."/>
                <direction value="response"/>
                <operator value="in"/>
                <responseCode value="200,201"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that request body conforms to the Bundle profile."/>
                <direction value="request"/>
                <validateProfileId value="Bundle-profile"/>
                <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that response body conforms to the Bundle profile."/>
                <direction value="response"/>
                <validateProfileId value="Bundle-profile"/>
                <warningOnly value="true"/>
            </assert>
        </action>
    </test>
</TestScript>
