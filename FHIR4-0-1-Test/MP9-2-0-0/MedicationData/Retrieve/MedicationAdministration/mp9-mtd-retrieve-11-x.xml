<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
   <id value="mp9-mtd-retrieve-11-x"/>
   <meta>
      <profile value="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript"/>
   </meta>
   <url value="http://nictiz.nl/fhir/TestScript/mp9-mtd-retrieve-11-x"/>
   <version value="r4-mp9-2.0.0"/>
   <name value="Medication Process 9 2.0.0  - MedicationAdministration (NL: MedicatieToeDiening) - Retrieve - Scenario 11.x"/>
   <status value="active"/>
   <publisher value="Nictiz"/>
   <contact>
      <name value="Nictiz"/>
      <telecom>
         <system value="email"/>
         <value value="kwalificatie@nictiz.nl"/>
         <use value="work"/>
      </telecom>
   </contact>
   <description value="Scenario 11.x - Toedieningen - diverse inhoud, alle subscenario's (Antwoord: bericht met 4 toedieningen)"/>
   <origin>
      <index value="1"/>
      <profile>
         <system value="http://hl7.org/fhir/testscript-profile-origin-types"/>
         <code value="FHIR-Client"/>
      </profile>
   </origin>
   <destination>
      <index value="1"/>
      <profile>
         <system value="http://hl7.org/fhir/testscript-profile-destination-types"/>
         <code value="FHIR-Server"/>
      </profile>
   </destination>
   <test id="Scenario-11-x">
      <name value="Scenario 11.x"/>
      <description value="Toedieningen - diverse inhoud, alle subscenario's (Antwoord: bericht met 4 toedieningen)"/>
      <action>
         <operation>
            <type>
               <system value="http://hl7.org/fhir/testscript-operation-codes"/>
               <code value="search"/>
            </type>
            <resource value="MedicationAdministration"/>
            <description value="Query MedicationAdministration resource(s) for MedicationAdministration"/>
            <destination value="1"/>
            <encodeRequestUrl value="true"/>
            <method value="get"/>
            <origin value="1"/>
            <params value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900870&amp;category=http://snomed.info/sct|18629005&amp;_include=MedicationAdministration:performer&amp;_include=MedicationAdministration:medication"/>
            <requestHeader>
               <field value="Authorization"/>
               <value value="${patient-token-id}"/>
            </requestHeader>
            <responseId value="searchset-response"/>
         </operation>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="true"/>
            </extension>
            <description value="Make sure that the test server (WildFHIR) gives a success response."/>
            <operator value="in"/>
            <responseCode value="200,201"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="false"/>
            </extension>
            <description value="Confirm that the test server (WildFHIR) returns a Bundle."/>
            <direction value="response"/>
            <resource value="Bundle"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="false"/>
            </extension>
            <description value="Confirm that the returned searchset Bundle contains 4 MedicationAdministration resource(s). Known issue: the server responds with an extra MedicationAdministration instance (with identifier value 'MBH_920_contactepisode_MTD1'), which is not available in the qualification scripts."/>
            <direction value="response"/>
            <expression value="Bundle.entry.where(resource.is(MedicationAdministration)).count() = 4"/>
            <warningOnly value="true"/>
         </assert>
      </action>
      <!--<nts:include value="assert-returnEntryCount" scope="project">
            <nts:with-parameter name="count" value="2"/>
            <nts:with-parameter name="breakdown" value="(Consists of at least 4 MedicationAdministration, 4 Medication, 1 ContactPerson, 2 PractitionerRole and 1 RelatedPerson resources.)"/>
        </nts:include>-->
   </test>
</TestScript>
