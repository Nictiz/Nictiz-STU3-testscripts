<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
   <id value="mp9-wds-retrieve-11-x"/>
   <meta>
      <profile value="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript"/>
   </meta>
   <url value="http://nictiz.nl/fhir/TestScript/mp9-wds-retrieve-11-x"/>
   <version value="r4-mp9-2.0.0"/>
   <name value="Medication Process 9 2.0.0  - VariableDosingRegiment (NL: Wisselend DoseerSchema) - Retrieve - Scenario 11.x"/>
   <status value="active"/>
   <publisher value="Nictiz"/>
   <contact>
      <name value="Nictiz"/>
      <telecom>
         <system value="email"/>
         <value value="kwalificatie@nictiz.nl"/>
         <use value="work"/>
      </telecom>
   </contact>
   <description value="Scenario 11.x - Wisselend doseerschema - diversen, alle subscenario's (Antwoord: bericht met 5 wisselende doseerschema's, inclusief de wisselende doseerschema's van scenarioset 13)"/>
   <origin>
      <index value="1"/>
      <profile>
         <system value="http://hl7.org/fhir/testscript-profile-origin-types"/>
         <code value="FHIR-Client"/>
      </profile>
   </origin>
   <destination>
      <index value="1"/>
      <profile>
         <system value="http://hl7.org/fhir/testscript-profile-destination-types"/>
         <code value="FHIR-Server"/>
      </profile>
   </destination>
   <test id="Scenario-11-x">
      <name value="Scenario 11.x"/>
      <description value="Wisselend doseerschema - diversen, alle subscenario's (Antwoord: bericht met 5 wisselende doseerschema's, inclusief de wisselende doseerschema's van scenarioset 13)"/>
      <action>
         <operation>
            <type>
               <system value="http://hl7.org/fhir/testscript-operation-codes"/>
               <code value="search"/>
            </type>
            <resource value="MedicationRequest"/>
            <description value="Query MedicationRequest resource(s) for VariableDosingRegimen"/>
            <destination value="1"/>
            <encodeRequestUrl value="true"/>
            <method value="get"/>
            <origin value="1"/>
            <params value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900870&amp;category=http://snomed.info/sct|395067002"/>
            <requestHeader>
               <field value="Authorization"/>
               <value value="${patient-token-id}"/>
            </requestHeader>
            <responseId value="searchset-response"/>
         </operation>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="true"/>
            </extension>
            <description value="Make sure that the test server (WildFHIR) gives a success response."/>
            <operator value="in"/>
            <responseCode value="200,201"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="false"/>
            </extension>
            <description value="Confirm that the test server (WildFHIR) returns a Bundle."/>
            <direction value="response"/>
            <resource value="Bundle"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <action>
         <assert>
            <extension url="http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript-assert-stopTestOnFail">
               <valueBoolean value="false"/>
            </extension>
            <description value="Confirm that the returned searchset Bundle contains 5 MedicationRequest resource(s). "/>
            <direction value="response"/>
            <expression value="Bundle.entry.where(resource.is(MedicationRequest)).count() = 5"/>
            <warningOnly value="false"/>
         </assert>
      </action>
      <!--<nts:include value="assert-returnEntryCount" scope="project">
            <nts:with-parameter name="count" value="2"/>
            <nts:with-parameter name="breakdown" value="(Consists of 2 MedicationRequest resources.)"/>
        </nts:include>-->
   </test>
</TestScript>
